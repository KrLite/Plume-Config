{
  "schemaVersion": 1,
  "id": "plumeconfig",
  "version": "${version}",

  "name": "Plume Config",
  "description": "A TOML-Based Lightweight Configuration Library for Minecraft Mods.",
  "authors": [
    "Me!"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/plumeconfig/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.krlite.plumeconfig.PlumeConfigMod"
    ],
    "plumeconfig-function": [
      "net.krlite.plumeconfig.base.function.LongToInteger",
      "net.krlite.plumeconfig.base.function.LongToShort",
      "net.krlite.plumeconfig.base.function.DoubleToFloat",
      "net.krlite.plumeconfig.base.function.LongToColor",
      "net.krlite.plumeconfig.base.function.StringToCharacter"
    ],
    "plumeconfig-savingfunction": [
      "net.krlite.plumeconfig.base.savingfunction.ColorToString",
      "net.krlite.plumeconfig.base.savingfunction.StringToString"
    ]
  },

  "depends": {
    "fabricloader": ">=0.14.10",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
